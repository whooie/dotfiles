# quickly adjust gaps for all workspaces
mode "gaps" {
	bindsym plus  gaps inner all plus 5
	bindsym minus gaps inner all minus 5
	bindsym 0     gaps inner all set 0

	bindsym r       gaps inner all set $gaps_inner
	bindsym Shift+r gaps outer all set $gaps_outer

	bindsym Shift+plus  gaps outer all plus 5
	bindsym Shift+minus gaps outer all minus 5
	bindsym Shift+0     gaps outer all set 0

	bindsym Escape mode "default"
	bindsym Return mode "default"

    bindsym $mod+g mode "gaps-workspace"
}

bindsym $mod+g mode "gaps"

mode "gaps-workspace" {
    bindsym plus  gaps inner current plus 5
    bindsym minus gaps inner current minus 5
    bindsym 0     gaps inner current set 0

    bindsym r       gaps inner current set $gaps_inner
    bindsym Shift+r gaps outer current set $gaps_outer

    bindsym Shift+plus  gaps outer current plus 5
    bindsym Shift+minus gaps outer current minus 5
    bindsym Shift+0     gaps outer current set 0

    bindsym Escape mode "gaps"
    bindsym Return mode "gaps"

    bindsym $mod+Escape mode "default"
    bindsym $mod+Return mode "default"
}

exec_always sh ~/.control/set_sound_out.sh speaker
exec_always amixer sset PCM 84%

mode "sound" {
    bindsym o       exec amixer sset Master 0%
    bindsym 1       exec amixer sset Master 10%
    bindsym 2       exec amixer sset Master 20%
    bindsym 3       exec amixer sset Master 30%
    bindsym 4       exec amixer sset Master 40%
    bindsym 5       exec amixer sset Master 50%
    bindsym 6       exec amixer sset Master 60%
    bindsym 7       exec amixer sset Master 70%
    bindsym 8       exec amixer sset Master 80%
    bindsym 9       exec amixer sset Master 90%
    bindsym 0       exec amixer sset Master 100%
    bindsym minus   exec amixer sset Master 5%-
    bindsym plus    exec amixer sset Master 5%+

    bindsym Shift+o exec amixer sset PCM 0%
    bindsym Shift+1 exec amixer sset PCM 10%
    bindsym Shift+2 exec amixer sset PCM 20%
    bindsym Shift+3 exec amixer sset PCM 30%
    bindsym Shift+4 exec amixer sset PCM 40%
    bindsym Shift+5 exec amixer sset PCM 50%
    bindsym Shift+6 exec amixer sset PCM 60%
    bindsym Shift+7 exec amixer sset PCM 70%
    bindsym Shift+8 exec amixer sset PCM 80%
    bindsym Shift+9 exec amixer sset PCM 90%
    bindsym Shift+0 exec amixer sset PCM 100%

    bindsym m exec amixer sset Master mute
    bindsym Shift+m exec amixer sset Master unmute

    #bindsym s exec amixer sset Speaker mute
    #bindsym Shift+s exec amixer sset Speaker unmute
    bindsym s exec sh ~/.control/set_sound.sh speaker

    #bindsym h exec amixer sset Headphone mute
    #bindsym Shift+h exec amixer sset Headphone unmute
    bindsym h exec sh ~/.control/set_sound.sh headphone

    bindsym b exec amixer sset Beep mute
    bindsym Shift+b exec amixer sset Beep unmute

    bindsym a exec amixer sset Master mute && amixer sset Beep mute
    bindsym Shift+a exec amixer sset Master unmute && amixer sset Beep unmute

    bindsym $mod+m mode "music"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+Shift+s mode "sound"

mode "backlight" {
    bindsym o exec xbacklight -set 0
    bindsym 1 exec xbacklight -set 11
    bindsym 2 exec xbacklight -set 21
    bindsym 3 exec xbacklight -set 31
    bindsym 4 exec xbacklight -set 41
    bindsym 5 exec xbacklight -set 51
    bindsym 6 exec xbacklight -set 61
    bindsym 7 exec xbacklight -set 71
    bindsym 8 exec xbacklight -set 81
    bindsym 9 exec xbacklight -set 91
    bindsym 0 exec xbacklight -set 100

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+b mode "backlight"

mode "music" {
        # bindings to control mpd via mpc
        bindsym Return          exec mpc play 1
        bindsym Shift+s         exec mpc stop
        bindsym s               exec mpc prev && mpc next && mpc toggle
        bindsym Shift+k         exec mpc prev && mpc toggle
        bindsym Shift+l         exec mpc next && mpc toggle
        bindsym p               exec mpc toggle
        bindsym Shift+period    exec mpc next
        bindsym Shift+comma     exec mpc prev
        bindsym c               exec mpc clear
        bindsym z               exec mpc random
        bindsym Shift+z         exec mpc shuffle
        bindsym r               exec mpc repeat
        bindsym Shift+r         exec mpc consume
        bindsym y               exec mpc single
        bindsym Shift+plus      exec mpc volume +5
        bindsym Shift+minus     exec mpc volume -5
        bindsym f               exec mpc seek +00:00:03
        bindsym b               exec mpc seek -00:00:03
        bindsym o               exec mpd --kill
        bindsym i               exec mpd

        bindsym 1               exec mpc load Cosmos
        bindsym 2               exec mpc load Cosmos\ \(alt.\)
        bindsym 3               exec mpc load Cosmos\ \(bgm.\)
        bindsym 4               exec mpc load Supercell-EGOIST-Yanagi\ Nagi

        bindsym Shift+1         exec mpc clear && mpc load Cosmos && mpc play 1
        bindsym Shift+2         exec mpc clear && mpc load Cosmos\ \(alt.\) && mpc play 1
        bindsym Shift+3         exec mpc clear && mpc load Cosmos\ \(bgm.\) && mpc play 1
        bindsym Shift+4         exec mpc clear && mpc load Houkago\ Tea\ Time && mpc play 1
        bindsym Shift+5         exec mpc clear && mpc load Supercell-EGOIST-Yanagi\ Nagi && mpc play 1
        bindsym Shift+6         exec mpc clear && mpc load VG\ Music && mpc play 1

        bindsym $mod+Shift+s mode "sound"

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

bindsym $mod+m mode "music"

